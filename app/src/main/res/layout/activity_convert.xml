<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    android:padding="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ejleone.githinji.cryptocon.UI.Convert">


    <android.support.v7.widget.CardView
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/card_background"
        android:background="@color/card_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="false"
        android:clickable="false">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--Todo: Add lottie loader -->
        </FrameLayout>

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="National Currency :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!--
            CNY  = Chinese Yuan
            EUR  = Euro
            GBP  = british pound
            JPY  = Japanese yen
            KRW  = south korean Won
            INR  = Indian Rupee
            NGN  = Nigerian Naira
            KES  = Kenyan Shilling
            UGX  = Ugandan Shilling
            AED  = UAE dirham
            RUB  = Russian Rubble

            XAF = 	Central African CFA franc
            DKK =   Danish krone
            EGP =   Egyptian Pound
            ETB =   Ethiopian birr
            MYR =   Malaysian ringgit
            AUD =   Australian dollar
            NOK =   Norwegian krone
            PKR =   Pakistani rupee
            JMD =   Jamaican dollar
            IRR =   Iranian rial




             -->

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/currency_chosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatSpinner>


            <TextView
                android:id="@+id/tery_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_conveditext"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Converr"
                android:text="Convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />





        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:padding="10dp"
        android:layout_marginTop="60dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/card_background"
        android:background="@color/card_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="false"
        android:clickable="false">


        <TextView
            android:textAlignment="center"
            android:text="23344"
            android:id="@+id/textview_result"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

</LinearLayout>

